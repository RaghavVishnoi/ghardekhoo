<% reviews = @retailer.retailer_reviews %>
<% ratings = reviews.pluck(:rating).compact.map(&:to_f) %>
<% avg_ratings = (ratings.sum/ratings.count).round if ratings.present? %>

<%= render 'retailer_info', retailer: @retailer, reviews: reviews, avg_ratings: avg_ratings %>

<%= render 'product_info', retailer: @retailer %>

<%= render 'reviews', retailer: @retailer, retailer_review: @retailer_review, reviews: reviews %>

<script type="text/javascript" src="/assets/main.js"></script>
