<!-- Main container Start -->  

      <div class="col-sm-3" id="sidebar-filter-container">
        <div class="navbar navbar-default visible-xs">
          <div class="container-fluid">
            <button class="btn btn-default navbar-btn" data-toggle="collapse" data-target="#filter-sidebar">
              <i class="fa fa-tasks"></i> Filters
            </button>
          </div>
        </div>

        <div class="container-fluid">

          <div class="row">

            <!-- filter sidebar -->
            <div id="filter-sidebar" class="col-xs-12 col-sm-12 visible-sm visible-md visible-lg collapse sliding-sidebar">

              <div class="dropdown-filter">
                <span data-toggle="collapse" data-target="#filter-1">
                  <i class="fa fa-fw fa-caret-down parent-expanded"></i>
                  <i class="fa fa-fw fa-caret-right parent-collapsed"></i>
                  Budget
                </span>
                <div id="filter-1" class="list-group">
                  <div class="row">
                    <div class="col-sm-12">
                      <div class="col-xs-12 col-sm-6">
                        <%= select_tag :min_price, options_for_select(MIN_PRICE_LIST), include_blank: "Min price", onchange: "search_retailers()" %>
                      </div>

                      <div class="col-xs-12 col-sm-6">
                       <%= select_tag :max_price, options_for_select(MAX_PRICE_LIST), include_blank: 'Max price', onchange: "search_retailers()" %>
                      </div>
                    </div>
                  </div> 
                </div>
              </div>
              
              <div class="checkbox-filter">
                <span data-toggle="collapse" data-target="#filter-2">
                  <i class="fa fa-fw fa-caret-down parent-expanded"></i>
                  <i class="fa fa-fw fa-caret-right parent-collapsed"></i>
                  Bedroom
                </span>
                <div id="filter-2" class="list-group">
                  <table class="table-responsive">
                    <tbody>
                      <% list_product_type.each_slice(2) do |product_type|%>
                        <tr>
                          <td>
                            <input type="checkbox" class="custom-control-input product-types-filter" onchange="search_retailers()" value="<%= product_type[0]&.id %>">
                            <label class="custom-control-label" for="check1"><%= product_type[0]&.name %></label>
                          </td>
                          <td>
                            <% if  product_type[1].present? %>
                              <input type="checkbox" class="custom-control-input product-types-filter" onchange="search_retailers()" value="<%= product_type[1]&.id %>">
                              <label class="custom-control-label" for="check1"><%= product_type[1]&.name %></label>
                            <% end %>  
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>

              <div class="textfield-filter">
                <span data-toggle="collapse" data-target="#filter-3" >
                  <i class="fa fa-fw fa-caret-down parent-expanded"></i>
                  <i class="fa fa-fw fa-caret-right parent-collapsed"></i>
                  Dealer
                </span>
                <div id="filter-3" class="list-group">
                  <div class="input-icons"> 
                    <i class="fa fa-search icon"></i> 
                    <input type="text" id="dealer_name" class="input-field"/>
                  </div>  
                </div>
              </div>
              
            </div>

          </div>
        </div>
      </div>
    
<!-- Main container End -->
<%= hidden_field_tag :action_type, 'list' %>
<script>
  $(document).ready(function(){
    $("#dealer_name").keypress(function(event) {
      if (event.which == 13) {
        search_retailers();
      }
    });
  })
</script>
<script type="text/javascript" src="/assets/main.js"></script>
