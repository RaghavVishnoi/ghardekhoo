<!-- Start Content -->
<div id="content">
  <div class="container">
    <div class="row">
      <!-- Product Info Start -->
      <div class="product-info">
        <div class="col-sm-8">
          <div class="inner-box ads-details-wrapper">
            <h2><%= retailer.name %></h2>
            <div class="info ratings">
              <% avg_ratings = 5 if avg_ratings.nil? %>
              <%(1...6).each do |index|%>
                <span class="fa fa-star <%='checked' if index <= avg_ratings.to_i%>"></span>
              <% end %> 
              (<b><%= reviews.count %></b> )              
            </div>
            <div id="owl-demo" class="owl-carousel owl-theme">
              <% retailer_photos = retailer.retailer_photos %>
              <% if retailer_photos.present? %>
                <% retailer.retailer_photos.each do |retailer_photo| %>
                  <div class="item">
                    <img src="<%= retailer_photo.photo_url %>" alt="" class="retailer-photo">
                  </div>
                <% end %>
              <% else %>  
                <div class="item">
                  <img src="/assets/missing_retailer_photo" alt="" class="retailer-photo">
                </div>
              <% end %>
            </div>
          </div>

          <div class="box">
            <h2 class="title-2"><strong>Contact Details</strong></h2>
              <div class="row">
              <div class="ads-details-info col-md-8">
                <p class="mb15"> <%= retailer.about_business %> <br> Below is the list of services, we are providing to our customers:</p>
                <ul class="list-circle">
                  <% retailer_product_sub_categories(retailer).each do |product_category| %>
                    <li><i class="fa fa-check-circle"></i> <%= product_category %></li>
                  <% end %>  
                </ul>
              </div>
              <div class="col-md-4">
                <aside class="panel panel-body panel-details">
                  <ul>
                    <li>
                    <p class=" no-margin "><strong>Total Products:</strong> <%= retailer.retailer_products.where(active: true).count %></p>
                    </li>
                    <li>
                    <p class="no-margin"><strong>Category:</strong> <a href="#"><%= retailer.product_categories.where(active: true).pluck(:name).map(&:camelize).join(',') %></a></p>
                    </li>
                    <li>
                    <p class="no-margin"><strong>Address:</strong> <%= retailer.address %> <!-- <a href="/retailer_location?lat=<%=retailer.lat%>&lng=<%=retailer.lng%>" target="_blank"> <i class="fa fa-street-view" aria-hidden="true"></i></a> --></p>
                    </li>
                    <li>
                    <p class=" no-margin "><strong>City:</strong> <%= retailer.city %></p>
                    </li>
                    <li>
                    <p class="no-margin"><strong>State:</strong> <%= retailer.state %> </p>
                    </li>
                  </ul>
                </aside>

                <div class="ads-action">
                  <ul class="list-border">
                    <li>
                      <i class=" fa fa-phone"></i> <%= retailer.phone %></li>
                    <li>
                      <i class=" fa fa-envelope-o"></i>
                      <%= retailer.email %>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="inner-box">
            <div class="widget-title">
              <h4>Advertisement</h4>
            </div>
            <a href="/retailers/<%= retailer.username %>"><img src="<%= profile_advertisement&.photo_url %>" alt=""></a>
          </div>
        <div class="col-xs-12">
          <div class="features-box wow fadeInDownQuick" data-wow-delay="0.3s">
            <div class="features-icon">
              <i class="lnr lnr-star">
              </i>
            </div>
            <div class="features-content">
              <h4>
                Fraud Protection
              </h4>
              <p>
                We have all the trusted retailers associated with us and providing you the best quality with minimum cost.
              </p>
            </div>
          </div>
        </div>
        <div class="col-xs-12">
          <div class="features-box wow fadeInDownQuick" data-wow-delay="0.6s">
            <div class="features-icon">
              <i class="lnr lnr-chart-bars"></i>
            </div>
            <div class="features-content">
              <h4>
                No Extra Fees 
              </h4>
              <p>
                We are not asking to pay extra fee for products and services while delivering to you.
              </p>
            </div>
          </div>
        </div>
        <div class="col-xs-12">
          <div class="features-box wow fadeInDownQuick" data-wow-delay="0.9s">
            <div class="features-icon">
              <i class="lnr lnr-spell-check"></i>
            </div>
            <div class="features-content">
              <h4>
                Verified Data/Products
              </h4>
              <p>
                All the retailers and products are verified by our experts to avoid any kind of fraud.
              </p>
            </div>
          </div>
           </div>
        <div class="col-xs-12">
          <div class="features-box wow fadeInDownQuick" data-wow-delay="0.9s">
            <div class="features-icon">
              <i class="lnr lnr-smile"></i>
            </div>
            <div class="features-content">
              <h4>
                Service at your door
              </h4>
              <p>
                When your deadline is non-negotiable, we are providing fast service at your door.
              </p>
            </div>
          </div>
           </div>

        </div>
      </div>
  </div>         
</div>
<!-- End Content -->