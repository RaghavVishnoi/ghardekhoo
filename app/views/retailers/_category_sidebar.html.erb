<!-- Main container Start -->  
<div class="main-container">
  <div class="container">
    <div class="row">
      <div class="col-sm-3 page-sidebar">
        <aside>
          <div class="inner-box">
            <div class="categories">
              <div class="widget-title">
                <i class="fa fa-align-justify"></i>
                <h4>All Categories</h4>
              </div>
              <div class="categories-list">
                <ul>
                  <% categories.each do |category| %>
                    <li>
                      <a href="#">
                        <i class="fa <%= CATEGORY_ICONS[category[0].underscore] %>" aria-hidden="true"></i>
                        <%= category[0]%> <span class="category-counter"><%= retailers_count[category[1]]&.count || 0 rescue 0 %></span>
                      </a>
                    </li>
                  <% end %>  
                </ul>
              </div>
            </div>
          </div>

          <div class="inner-box">
            <div class="widget-title">
              <h4>Premium Ads</h4>
            </div>
            <div class="advimg">
              <ul class="featured-list">
                <li>
                  <img alt="" src="/assets/featured/img1.jpg">
                  <div class="hover">
                    <a href="#"><span>$49</span></a>
                  </div>
                </li>
                <li>
                  <img alt="" src="/assets/featured/img2.jpg">
                  <div class="hover">
                    <a href="#"><span>$49</span></a>
                  </div>
                </li>
                <li>
                  <img alt="" src="/assets/featured/img3.jpg">
                  <div class="hover">
                    <a href="#"><span>$49</span></a>
                  </div>
                </li>
              </ul>
            </div>
          </div>

          <div class="inner-box">
            <div class="widget-title">
              <h4>Advertisement</h4>
            </div>
            <img src="/assets/img1.jpg" alt="">
          </div>
        </aside>
      </div>
      <div class="col-sm-9 page-content">
        <!-- Product filter Start -->
        <div class="product-filter">
          <div class="col-sm-2">
            <div class="grid-list-count">
              <a class="list switchToGrid" href="#"><i class="fa fa-list"></i></a>
              <a class="grid switchToList" href="#"><i class="fa fa-th-large"></i></a>
            </div>
          </div>
          <div class="col-sm-2 col-sm-offset-4">  
            <div class="short-name">
              <span><b>Sort By</b></span>
              <select class="form-control">
                <option value="first">Name</option>
                <option value="first">Rating</option>
              </select>
            </div>
          </div>
          <div class="col-sm-3 col-sm-offset-1">  
            <div class="Show-item">
              <span><b>Search Name</b></span>
              <input class="form-control" name="keyword" value="" placeholder="Enter Keyword" type="text">
            </div>
          </div>  
        </div>
        <!-- Product filter End -->

        <!-- Adds wrapper Start -->
        <div class="adds-wrapper">
          <% retailers.each do |retailer|%>
          <a href="#">
            <div class="item-list" id="retailer-card">
              <div class="col-sm-3 no-padding photobox">
                <div class="add-image">
                  <%= image_tag "#{retailer&.retailer_photos&.main_photo&.first.photo_url}" %>
                </div>
              </div>
              <div class="col-xs-5 col-sm-5 col-md-6 add-desc-box">
                <div class="add-details">
                  <h5 class="add-title"><%= retailer&.name %></h5>
                  <div class="info ratings">
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star"></span>
                    <span class="fa fa-star"></span> (
                    <b>6 Users</b>)
                    <p>
                        <span class="category btn btn-danger btn-sm">
                          <%= retailer&.product_categories&.map{|category| category&.name&.camelize}&.join(',')%>
                          </span>
                    </p>  
                    <p>
                      <span class="item-location">
                        <b><%=retailer&.city&.camelize%>, <%=retailer&.state&.camelize%>, India</b> 
                      </span>
                    </p>
                  </div>
                  <div class="item_desc">
                   <%=retailer&.sub_categories.join(' | ')%>
                  </div>
                </div>
              </div>
              <div class="col-sm-4 col-xs-4 col-md-3 text-right  price-box">
                <div class="col-sm-12 padding-0">
                  <p class="contact-info">
                    <b><i class="fa fa-phone"></i>+(91)- <%= retailer.phone %></b>
                  </p>
                </div>
                <% if retailer.email.present?%>
                  <div class="col-sm-12 padding-0">  
                    <p class="contact-info">
                      <b><i class="fa fa-envelope-o" aria-hidden="true"></i><%= retailer.email %></b>
                    </p>
                  </div>
                <% end %>  
                <div class="col-sm-12 padding-0">  
                  <a class="btn btn-primary btn-sm review"><i class="fa fa-eye"></i>
                  <span>Reviews (0)</span></a>  
                </div>  
              </div>
              <div class="col-sm-12">
                <hr />
              </div>
            </div>
          </a>  
          <% end %>
        </div>
        <!-- Adds wrapper End -->
        
        <!-- Start Pagination -->
        <div class="pagination-bar">
          <ul class="pagination">
          <li class="active"><a href="#">1</a></li>
          <li><a href="#">2</a></li>
          <li><a href="#">3</a></li>
          <li><a href="#">4</a></li>
          <li><a href="#"> ...</a></li>
          <li><a class="pagination-btn" href="#">Next Â»</a></li>
          </ul>
        </div>
        <!-- End Pagination -->

        <div class="post-promo text-center">
          <h2> Do you get anything for sell ? </h2>
          <h5>Sell your products online FOR FREE. It's easier than you think !</h5>
          <a href="post-ads.html" class="btn btn-post btn-danger">Post a Free Ad </a>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Main container End -->  