<!-- Start Search box -->
<div class="row search-bar">
  <div class="advanced-search">
    <div class="col-md-3 col-sm-6 search-col">
      <div class="input-group-addon search-category-container">
        <label class="styled-select" id="category-list">
            <%= render 'commons/categories', categories: categories, default_category: default_category%>
        </label>
      </div>
    </div>
    <div class="col-md-3 col-sm-6 search-col">
      <div class="input-group-addon search-category-container">
        <label class="styled-select" id="state-list">
          <%= render 'commons/states', states: states, default_state: default_state%>                       
        </label>
      </div>
    </div>
    <div class="col-md-3 col-sm-6 search-col">
      <div class="input-group-addon search-category-container">
        <label class="styled-select" id="city-list">
           <%= render 'commons/cities', cities: cities, default_city: default_city%>                              
        </label>
      </div>  
    </div>
    <div class="col-md-3 col-sm-6 search-col">
      <button class="btn btn-common btn-search btn-block" onclick="search_retailers()" id="btn-filter">
        <strong>Search</strong>
      </button>
      <p class="reset-filter" onclick="resetFilter()"><u>Reset Filter</u></p>
    </div>
  </div>
</div>
<!-- End Search box -->