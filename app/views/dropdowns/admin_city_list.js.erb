$('#retailer_city, #retailer_product_city').html('')
$('#retailer_city, #retailer_product_city').append($('<option>', { 
  value: '',
  text : 'Select city'
}));
<% @cities.each do |city| %>
	$('#retailer_city, #retailer_product_city').append($('<option>', { 
	  value: '<%= city %>',
	  text : '<%= city %>'
	}));
<% end %>

$('#retailer_city, #retailer_product_city').val('<%= @default_city %>').change();